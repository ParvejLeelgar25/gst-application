<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

	<selection name="bankAccount.type.selection">
		<option value="current">Current</option>
		<option value="saving">Saving</option>
	</selection>

	<grid name="bank-account-grid" title="Bank Account"
		model="com.axelor.gst.db.BankAccount">
		<field name="bank" />
		<field name="accountNo" />
		<field name="ifsc" />
	</grid>

	<form name="bank-account-form" title="Bank Account"
		model="com.axelor.gst.db.BankAccount">
		<panel name="bank-account-panel">
			<field name="bank" />
			<field name="accountNo" />
			<field name="ifsc" />
			<field name="type" selection="bankAccount.type.selection" />
			<field name="address" />
		</panel>
	</form>

</object-views>