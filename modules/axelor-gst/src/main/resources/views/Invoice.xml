<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

	<grid name="invoice-grid" title="Invoice" model="com.axelor.gst.db.Invoice">
		<field name="status" />
	</grid>

	<form name="invoice-form" title="Invoice" model="com.axelor.gst.db.Invoice" onNew="action-invoice-record-company-on-new">
		<panel name="invoice-panel" itemSpan="12">
			<field name="status" selection="invoice.status.selection" widget="NavSelect" />
			<field name="company" canNew="true" widget="SuggestBox"/>
			<field name="reference"/>
			<field name="date"/>
			<field name="priority"/>
			<field name="party" canNew="true" form-view="party-form" widget="SuggestBox" onChange="action-invoice-method-party-on-change"/>
			<field name="partyContact" widget="SuggestBox"/>
			<field name="invoiceAddress" widget="SuggestBox"/>
			<field name="shippingAddress" widget="SuggestBox" hideIf="isUseInvoiceAddressAsShipping == true"/>
			<field name="isUseInvoiceAddressAsShipping" onChange="action-invoice-method-isUseInvoiceAddressAsShipping-on-change"/>
			<field name="netAmount"/>
			<field name="netIgst"/>
			<field name="netCgst"/>
			<field name="netSgst"/>
			<field name="grossAmount"/>
			<panel name="invoice-item-panel" title="Invoice Item">
				<field name="invoiceItems" form-view="invoice-line-form" onChange="action-invoice-method-invoice-item-on-change"/>
			</panel>
		</panel>
	</form>
	
	<action-record name="action-invoice-record-company-on-new" model="com.axelor.gst.db.Company">
		<field name="company" expr="eval: __repo__(Company).all().fetchOne()"/>
		<field name="date" expr="eval: __datetime__"/>
	</action-record>
	
	<action-method name="action-invoice-method-party-on-change">
		<call class="com.axelor.gst.web.InvoiceController" method="setPartyData"/>
	</action-method>
	
	<action-method name="action-invoice-method-isUseInvoiceAddressAsShipping-on-change">
		<call class="com.axelor.gst.web.InvoiceController" method="setShippingAddress"/>
	</action-method>
	
  	<action-method name="action-invoice-method-invoice-item-on-change">
  		<call class="com.axelor.gst.web.InvoiceController" method="setDetails"/>
  	</action-method>

</object-views>	